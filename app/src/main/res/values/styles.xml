<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowFullscreen">true</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="tile_style">
        <item name="android:layout_margin">@dimen/tile_margin</item>
        <item name="android:width">@dimen/tile_size</item>
        <item name="android:height">@dimen/tile_size</item>
        <item name="android:background">@drawable/tile_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/gray_color</item>
        <item name="android:textSize" tools:ignore="SpUsage">40dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="empty_tile_style" parent="tile_style">
        <item name="android:visibility">invisible</item>
    </style>

</resources>
