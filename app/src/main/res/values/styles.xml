<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <!--Hides ToolBar-->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="tile_style">
        <item name="android:layout_margin">2dp</item>
        <item name="android:width">70dp</item>
        <item name="android:height">70dp</item>
        <item name="android:background">@drawable/tile_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#eeeeee</item>
        <item name="android:textSize" tools:ignore="SpUsage">40dp</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="empty_tile_style" parent="tile_style">
        <item name="android:visibility">invisible</item>
    </style>

</resources>
