<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background"
    tools:context="com.radionov.pyatnashki.MainActivity">
    <!--android:background="@drawable/screen_background"-->

    <TextView

        android:id="@+id/tv_info_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="56dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/text_background"
        android:padding="8dp"
        android:text="@string/lets_play_title"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="22dp"
        android:textStyle="bold"
        tools:ignore="SpUsage" />

    <GridLayout
        android:id="@+id/tiles_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_info_display"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="56dp"
        android:background="@drawable/field_background"
        android:columnCount="4"
        android:padding="4dp">

        <TextView
            android:id="@+id/tile_1"
            style="@style/tile_style"
            android:text="@string/tile_1_text" />

        <TextView
            android:id="@+id/tile_2"
            style="@style/tile_style"
            android:text="@string/tile_2_text" />

        <TextView
            android:id="@+id/tile_3"
            style="@style/tile_style"
            android:text="@string/tile_3_text" />

        <TextView
            android:id="@+id/tile_4"
            style="@style/tile_style"
            android:text="@string/tile_4_text" />

        <TextView
            android:id="@+id/tile_5"
            style="@style/tile_style"
            android:text="@string/tile_5_text" />

        <TextView
            android:id="@+id/tile_6"
            style="@style/tile_style"
            android:text="@string/tile_6_text" />

        <TextView
            android:id="@+id/tile_7"
            style="@style/tile_style"
            android:text="@string/tile_7_text" />

        <TextView
            android:id="@+id/tile_8"
            style="@style/tile_style"
            android:text="@string/tile_8_text" />

        <TextView
            android:id="@+id/tile_9"
            style="@style/tile_style"
            android:text="@string/tile_9_text" />

        <TextView
            android:id="@+id/tile_10"
            style="@style/tile_style"
            android:text="@string/tile_10_text" />

        <TextView
            android:id="@+id/tile_11"
            style="@style/tile_style"
            android:text="@string/tile_11_text" />

        <TextView
            android:id="@+id/tile_12"
            style="@style/tile_style"
            android:text="@string/tile_12_text" />

        <TextView
            android:id="@+id/tile_13"
            style="@style/tile_style"
            android:text="@string/tile_13_text" />

        <TextView
            android:id="@+id/tile_14"
            style="@style/tile_style"
            android:text="@string/tile_14_text" />

        <TextView
            android:id="@+id/tile_15"
            style="@style/tile_style"
            android:text="@string/tile_15_text" />

        <TextView
            android:id="@+id/tile_16"
            style="@style/empty_tile_style" />
    </GridLayout>

    <Button
        android:id="@+id/btn_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="56dp"
        android:background="@drawable/text_background"
        android:onClick="onButtonClick"
        android:padding="16dp"
        android:text="@string/start_button"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18dp"
        android:textStyle="bold" />
</RelativeLayout>
